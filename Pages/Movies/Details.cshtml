@page
@model CineMania.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>
    <h4>@Model.Movie.Title</h4>
    <hr />
    <dl class="row">
        <div class="col-md-3">
            <img class="img-fluid" src="/images/posters/@Model.Movie.ImageName" alt="">
        </div>
        <div class="col-md-6">
            <h5>Synopsis</h5>
            <p>@Model.Movie.Description</p>
        </div>
        
        <div class="col-md-3">
            <h5>Related Movies</h5>
            
            @foreach (var m in @Model.MovieCategory)
            {
                if (@Model.Movie.Id != m.Id)
                {
                    <a class="text-decoration-none" asp-page="./Details" asp-route-id="@m.Id">
                        <img style="width: 65%; height: 30%" class="card-img-top" src="/images/posters/@m.ImageName" alt="Card image cap">
                    </a>
                    <p>@m.Title</p>
                }
            }
            
        </div>
    </dl>
</div>
<div>
    
    <a asp-page="./Edit" asp-route-id="@Model.Movie.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Movie.Id">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>
